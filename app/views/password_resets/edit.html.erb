<h1>Reset Your Password</h1>

<%= form_for @identity, :url => password_reset_path(params[:id]) do |f| %>
  <% if @identity.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @identity.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :password, t('form.identities.password') %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, t('form.identities.password_confirmation') %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit t('form.identities.update_password') %></div>
<% end %>
